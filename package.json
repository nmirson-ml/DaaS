{
  "name": "@platform/embedded-analytics",
  "version": "1.0.0",
  "description": "Embedded Analytics Dashboard Platform MVP",
  "private": true,
  "workspaces": [
    "packages/shared-types",
    "services/auth-service",
    "services/query-engine",
    "services/dashboard-service",
    "services/visualization-service",
    "services/embedding-sdk",
    "apps/dashboard-builder",
    "apps/hero-website"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:query\" \"npm run dev:dashboard\" \"npm run dev:viz\" \"npm run dev:app\"",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:query": "cd services/query-engine && npm run dev",
    "dev:dashboard": "cd services/dashboard-service && npm run dev",
    "dev:viz": "cd services/visualization-service && npm run dev",
    "dev:app": "cd apps/dashboard-builder && npm run dev",
    "dev:hero": "cd apps/hero-website && npm run dev",
    "build": "npm run build:types && npm run build:services && npm run build:apps",
    "build:types": "cd packages/shared-types && npm run build",
    "build:services": "concurrently \"cd services/auth-service && npm run build\" \"cd services/query-engine && npm run build\" \"cd services/dashboard-service && npm run build\" \"cd services/visualization-service && npm run build\"",
    "build:apps": "concurrently \"cd apps/dashboard-builder && npm run build\" \"cd apps/hero-website && npm run build\"",
    "test": "concurrently \"npm run test:auth\" \"npm run test:query\" \"npm run test:dashboard\" \"npm run test:viz\" \"npm run test:sdk\"",
    "test:auth": "cd services/auth-service && npm run test",
    "test:query": "cd services/query-engine && npm run test",
    "test:dashboard": "cd services/dashboard-service && npm run test",
    "test:viz": "cd services/visualization-service && npm run test",
    "test:sdk": "cd services/embedding-sdk && npm run test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "main": ".eslintrc.js",
  "directories": {
    "doc": "docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
